@model RoleTopMVC.ViewModels.HistoricoViewModels
@{
    ViewData["Title"] = "Agenda - Rolê Top";
    ViewData["H2"] = "Histórico de Agendamento";
}

<main>
    <h2>@ViewData["H2"]</h2>
    <table>
        <thead>
            <tr>
                <th>Data e Hora</th>
                <th>Tipo de evento</th>
                <th>Evento</th>
                <th>Nº Convidados</th>
                <th>Descrição</th>
                <th>Serviços</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var agenda in Model.Agendar) {
                <tr>
                    <td>@agenda.Agenda.DataHora</td>
                    <td>@agenda.Agenda.Tipo</td>
                    <td>@agenda.Agenda.Evento</td>
                    <td>@agenda.Agenda.Convidados</td>
                    <td>@agenda.Agenda.Descricao</td>
                    <td>@agenda.Agenda.Servicos</td>
                    @if(@agenda.Status == 0)
                        {
                            <td>Pendente</td>
                        }
                        else if (@agenda.Status == 1)
                        {
                            <td>Aprovado</td>
                        }
                        else if (@agenda.Status == 2)
                        {
                            <td>Reprovado</td>
                        }
                </tr> 
            }
        </tbody>
    </table>
</main>